{
  "Temperature": {
    "type": "float",
    "initial_value": 20.0,
    "simulate": true,
    "simulation_type":  "random",
    "min":  15.0,
    "max": 25.0,
    "description": "Ambient temperature in Celsius"
  },
  "Pressure": {
    "type": "float",
    "initial_value": 101.3,
    "simulate": true,
    "simulation_type": "random",
    "min": 99.0,
    "max": 103.0,
    "description": "System pressure in kPa"
  },
  "Flow":  {
    "type": "float",
    "initial_value":  50.0,
    "simulate":  true,
    "simulation_type": "random",
    "min": 40.0,
    "max": 60.0,
    "description": "Flow rate in L/min"
  },
  "FlowRate": {
    "type": "float",
    "initial_value": 100.0,
    "simulate":  true,
    "simulation_type": "sine",
    "amplitude": 20.0,
    "offset":  100.0,
    "period":  30,
    "description": "Flow rate with sine wave pattern"
  },
  "Counter": {
    "type": "int",
    "initial_value": 0,
    "simulate": true,
    "simulation_type": "increment",
    "increment": 1,
    "max": 1000,
    "reset_on_max": true,
    "description": "Production counter with rollover"
  },
  "TotalCount": {
    "type": "int",
    "initial_value": 0,
    "simulate": true,
    "simulation_type": "increment",
    "increment": 1,
    "description": "Total production counter (no rollover)"
  },
  "Status": {
    "type": "string",
    "initial_value": "Running",
    "simulate": false,
    "description": "System status message"
  },
  "AlarmMessage": {
    "type": "string",
    "initial_value": "No Alarms",
    "simulate": false,
    "description": "Current alarm message"
  },
  "IsRunning": {
    "type": "bool",
    "initial_value": true,
    "simulate": false,
    "description": "System running flag"
  },
  "AlarmActive": {
    "type": "bool",
    "initial_value": false,
    "simulate":  true,
    "description": "Random alarm state"
  }
}