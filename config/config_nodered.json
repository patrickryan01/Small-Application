{
  "tags": {
    "Temperature": {
      "type": "float",
      "initial_value": 20.0,
      "simulate": true,
      "simulation_type": "random",
      "min": 15.0,
      "max": 25.0
    },
    "Pressure": {
      "type": "float",
      "initial_value": 101.3,
      "simulate": true,
      "simulation_type": "random",
      "min": 99.0,
      "max": 103.0
    },
    "FlowRate": {
      "type": "float",
      "initial_value": 100.0,
      "simulate": true,
      "simulation_type": "sine",
      "amplitude": 20.0,
      "offset": 100.0,
      "period": 30
    },
    "Counter": {
      "type": "int",
      "initial_value": 0,
      "simulate": true,
      "simulation_type": "increment",
      "increment": 1,
      "max": 1000,
      "reset_on_max": true
    }
  },
  "publishers": {
    "mqtt": {
      "enabled": true,
      "broker": "localhost",
      "port": 1883,
      "topic_prefix": "nodered/opcua",
      "payload_format": "json",
      "qos": 0
    },
    "websocket": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 9001
    },
    "rest_api": {
      "enabled": true,
      "host": "0.0.0.0",
      "port": 5000
    }
  }
}
